<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mind.notification_simpledemo.MainActivity">


    <Button
        android:id="@+id/_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:text="Show Notification" />

    <Button
        android:id="@+id/_cencel_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/_notification"
        android:layout_below="@+id/_notification"
        android:layout_marginTop="93dp"
        android:text="Cencel Notification" />
</RelativeLayout>
